pipeline {
    agent any
    options {
        timestamps()
    }
    stages {
        stage ('Prod') {
            when {
                branch 'master'
            }
            steps {
                withCredentials([
                    string(credentialsId: 'PRODUCTION_KUBERNETES_SERVER', variable: 'SERVER_URL'),
                ]) {
                    withKubeConfig(credentialsId: 'PRODUCTION_KUBERNETES_TOKEN', serverUrl: env.SERVER_URL) {
                        sh 'make deploy'
                    }
                }
            }
        }
    }
}
